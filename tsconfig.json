{
	"compilerOptions": {
	  "module": "NodeNext",
	  "target": "ES2022",
	  "lib": ["ES2022", "DOM"],
	  "sourceMap": true,
	  "rootDir": "src",
	  "skipLibCheck": true,
	  "strict": true,
	  "noEmit": false,
	  "esModuleInterop": true,
	  "resolveJsonModule": true,
	  "forceConsistentCasingInFileNames": true,
	  "incremental": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
  }
  