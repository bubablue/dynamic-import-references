{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ESNext",
		"lib": ["ESNext"],
		"sourceMap": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": false
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
